---
import Base from "../layouts/BaseLayout.astro";
import packs from "../data/packs.json";
---
<Base title="AI Prompt Hub â€“ Unlock AI for your niche">
  <section class="py-24 text-center container mx-auto px-4 md:px-8">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Unlock AI for <span class="text-secondary">your</span> niche</h1>
    <p class="max-w-2xl mx-auto mb-8 text-lg">Curated prompt libraries with compliance-ready localisation and micro-support.</p>
    <a href="#packs" class="inline-block bg-secondary hover:bg-teal-600 text-white px-8 py-3 rounded-lg transition">Browse Packs</a>
  </section>

  <section id="packs" class="container mx-auto px-4 md:px-8 py-16">
    <h2 class="text-3xl font-semibold mb-8 text-center">Featured Packs</h2>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {packs.map(pack => (
        <article class="bg-white shadow rounded-xl overflow-hidden flex flex-col" key={pack.slug}>
          <img src={pack.cover} alt={pack.title} class="w-full h-48 object-cover" />
          <div class="p-6 flex flex-col gap-3 flex-1">
            <h3 class="text-xl font-medium">{pack.title}</h3>
            <p class="text-sm text-gray-600 flex-1">{pack.tease}</p>
            <a href={`/${pack.slug}`} class="mt-4 bg-primary text-white px-4 py-2 rounded-md text-center hover:bg-blue-700 transition">From {pack.currency} {pack.price}</a>
          </div>
        </article>
      ))}
    </div>
  </section>
</Base>
